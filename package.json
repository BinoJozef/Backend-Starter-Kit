{
  "name": "Backend-Starter-Kit",
  "version": "1.0.0",
  "description": "A boilerplate for Node.js, Express, Mongoose, Heroku, mLab, Nodemon, PM2, and Babel.",
  "scripts": {
    "start": "nodemon src/api.js --exec babel-node",
    "test": "jest --coverage --forceExit",
    "build": "babel src -d dist",
    "lint": "eslint src test",
    "unit": "jest \"src/.*\\.js$\" --coverage",
    "e2e": "jest \"test/.*\\.js$\" --forceExit",
    "reset": "git reset --hard HEAD && git clean -df",
    "reinstall": "yarn cache clean && git clean -dfx -e '.*' && yarn install",
    "pm2": "pm2",
    "flow": "flow",
    "typed": "flow-typed install",
    "codecov": "codecov",
    "prebuild": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shyam-Chen/Backend-Starter-Kit.git"
  },
  "keywords": [
    "Node.js"
  ],
  "author": "Yen-cheng Chen, 陳彥澄",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shyam-Chen/Backend-Starter-Kit/issues"
  },
  "homepage": "https://github.com/Shyam-Chen/Backend-Starter-Kit#readme",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.2",
    "chalk": "2.3.1",
    "compression": "1.7.2",
    "connect-redis": "3.3.3",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "express": "4.16.2",
    "express-flash": "0.0.2",
    "express-graphql": "0.6.11",
    "express-history-api-fallback": "2.2.1",
    "express-session": "1.15.6",
    "formidable": "1.1.1",
    "graphql": "0.11.7",
    "graphql-tag": "2.5.0",
    "graphql-tools": "2.7.2",
    "joi": "13.1.2",
    "jsonwebtoken": "8.1.1",
    "lodash": "4.17.5",
    "merge-graphql-schemas": "1.3.0",
    "mongoose": "5.0.6",
    "morgan": "1.9.0",
    "nodemailer": "4.4.2",
    "passport": "0.4.0",
    "passport-facebook": "2.1.1",
    "passport-google-oauth20": "1.0.0",
    "passport-jwt": "3.0.1",
    "passport-twitter": "1.0.4",
    "pg": "7.4.1",
    "pg-hstore": "2.3.2",
    "pm2": "2.10.1",
    "raven": "2.4.1",
    "redis": "2.8.0",
    "rxjs": "6.0.0-alpha.3",
    "sequelize": "4.33.4",
    "socket.io": "2.0.4",
    "socket.io-redis": "5.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-jest": "22.1.0",
    "babel-plugin-root-import": "5.1.0",
    "babel-plugin-transform-function-bind": "6.22.0",
    "babel-plugin-transform-imports": "1.4.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "codecov": "3.0.0",
    "eslint": "4.18.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-flowtype-errors": "3.3.7",
    "eslint-plugin-graphql": "1.5.0",
    "eslint-plugin-import": "2.9.0",
    "faker": "4.1.0",
    "flow-bin": "0.64.0",
    "flow-typed": "2.2.3",
    "jest": "22.1.4",
    "nodemon": "1.14.11",
    "regenerator-runtime": "0.11.1",
    "rimraf": "2.6.2",
    "supertest": "3.0.0"
  }
}
